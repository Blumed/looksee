{
    "manifest_version": 2,

    "name": "Looksee",
    "description": "This extension assists with layout debugging by enabling borders and shaders to dom nodes.",
    "default_locale": "en",
    "version": "1.4.0",
    "offline_enabled": true,

    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

    "permissions": [
        "tabs", "<all_urls>",
        "storage",
        "http://localhost/*"
    ],

    "content_scripts": [{
        "matches": [
            "*://*/*"
        ],
        "css": ["assets/css/main.css"],
        "js": ["assets/js/vendor/jquery-2.2.3.min.js", "assets/js/contentScript.js"],

        "run_at": "document_end",
        "all_frames": true
    }],

    "options_page": "options.html",

    "background": {
        "persistent": true,
        "scripts": ["assets/js/background.js"]  },

    "browser_action": {
        "default_icon": "assets/images/icon128.png",
        "default_popup": "popup.html"
    },
    "icons": { "16": "assets/images/icon16.png",
           "48": "assets/images/icon48.png",
          "128": "assets/images/icon128.png" 
    }
}
